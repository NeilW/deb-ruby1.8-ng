#! /bin/sh

set -e

if [ "$1" = "configure" ]
then
	if [ -w /usr/local/lib -a ! -e /usr/local/lib/site_ruby/1.8 ]
	then
	    mkdir -p /usr/local/lib/site_ruby/1.8/@@arch@@
	    chown root:staff /usr/local/lib/site_ruby/1.8/@@arch@@
	    chmod 2775 /usr/local/lib/site_ruby/1.8/@@arch@@
	fi
fi

